@model IEnumerable<StatusBoard.Core.Models.Server>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hostname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IpAddress)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hostname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IpAddress)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id}) 
                <button class="btn btn-default" id="UpdatePing" datafield="/api/ServerActions/TriggerNewServiceHistory?hostname=@item.Hostname">Update Ping</button>
            </td>
        </tr>
    }

</table>

@section scripts
{
    <script type="text/javascript">
        $("#UpdatePing").click(function() {
            $.post({
                url: $('#RefreshService').attr('datafield')
            });
        });
    </script>
}
