@using Microsoft.AspNet.Identity
@using StatusBoard.Core;
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", StatusBoard.Core.Constants.Controller.Actions.Index, StatusBoard.Core.Constants.Controller.Dashboard, routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", StatusBoard.Core.Constants.Controller.Actions.Register, StatusBoard.Core.Constants.Controller.Account, routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", StatusBoard.Core.Constants.Controller.Actions.Login, StatusBoard.Core.Constants.Controller.Account, routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
